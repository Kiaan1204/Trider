<?xml version="1.0" encoding="utf-8"?>
<!--THIS IS THE SETTING LAYOUT-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    tools:context=".ProfileSettings">
<!--THIS IS A BUTTON-->
    <Button
        android:id="@+id/dpChangeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="42dp"
        android:background="@color/Orange"
        android:textColor="@color/Black"
        android:text="UPDATE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.211"
        app:layout_constraintStart_toEndOf="@+id/UpdateDP"
        app:layout_constraintTop_toTopOf="parent" />
<!--THIS IS THE IMAGEVIEW FOR THE ICON-->
    <ImageView
        android:id="@+id/UpdateDP"
        android:layout_width="142dp"
        android:layout_height="127dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/bikeblack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<!--THIS IS A TEXTVIEW TO SHOW THE NAME-->
    <TextView
        android:id="@+id/UpdateName"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="18dp"
        android:background="@color/Black"
        android:textColor="@color/Orange"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UpdateDP" />
<!--THIS IS A TEXTVIEW TO SHOW THE PHONE NUMBER-->
    <TextView
        android:id="@+id/UpdatePhoneNumber"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="18dp"
        android:background="@color/Black"
        android:textColor="@color/Orange"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UpdateEmail" />
<!--THIS IS THE TEXT VIEW FOR THE EMAIL-->
    <TextView
        android:id="@+id/UpdateEmail"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="18dp"
        android:background="@color/Black"
        android:textColor="@color/Orange"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UpdateName" />
<!--THIS IS A DEACTIVATE BUTTON-->
    <Button
        android:id="@+id/DeactivateButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="236dp"
        android:layout_marginBottom="208dp"
        android:background="@color/Orange"
        android:text="DEACTIVATE ACCOUNT"
        android:textColor="@color/Black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UpdatePhoneNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>